@model MM_Invoice_Final.Models.Dto.CustomerSummaryDto

<h2>Edit Customer Details</h2>

<form method="post" asp-controller="CustomerCars" asp-action="EditCustomer">
    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <input asp-for="CustomerId" readonly />
    </div
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" />
        <span asp-validation-for="CustomerName"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerEmail"></label>
        <input asp-for="CustomerEmail" />
        <span asp-validation-for="CustomerEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerNumber"></label>
        <input asp-for="CustomerNumber" />
        <span asp-validation-for="CustomerNumber"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-route-id="@Model.CustomerId">Submit</button>
</form>