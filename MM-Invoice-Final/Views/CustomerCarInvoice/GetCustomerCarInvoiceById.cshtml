@model List<MM_Invoice_Final.Models.Dto.CustomerCarInvoiceSummaryDto>

<h2>Car Invoice Details</h2>

<div class="container d-flex justify-content-between">
    <div class="left">
        <div class="input-group">
            <label asp-for="@Model[0].CustomerName"></label>
            <input asp-for="@Model[0].CustomerName" readonly />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CustomerEmail"></label>
            <input asp-for="@Model[0].CustomerEmail" readonly />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CustomerNumber"></label>
            <input asp-for="@Model[0].CustomerNumber" readonly />
        </div>
    </div>
    <div class="right">
        <div class="input-group">
            <label asp-for="@Model[0].CarRego"></label>
            <input asp-for="@Model[0].CarRego" readonly />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CarMake"></label>
            <input asp-for="@Model[0].CarMake" readonly />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CarModel"></label>
            <input asp-for="@Model[0].CarModel" readonly />
        </div>

    </div>
</div>


<div class="transcation mt-5">
<div class="d-flex justify-content-center align-items-center">
    <div class="flex-grow-1 d-flex justify-content-center">
        <h4>Transactions</h4>
    </div>
        <a class="ms-auto btn btn-warning"><i class="bi bi-plus-circle-fill"></i> Invoice</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Car Issue</th>
            <th>Date Issued</th>
            <th>Due Date</th>
            <th>Total Amount</th>
            <th>Amount Paid</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var invoice in Model)
        {
            <tr>
                <td class="align-middle">@invoice.InvoiceId</td>
                <td class="align-middle">@invoice.IssueName</td>
                <td class="align-middle">@invoice.DateAdded</td>
                <td class="align-middle">@invoice.DueDate</td>
                <td class="align-middle">@invoice.TotalAmount</td>
                <td class="align-middle">@invoice.AmountPaid</td>
                <td class="align-middle">
                    <a class="" style="color:orange">View</a>
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>